brew "fish"
brew "neovim"
brew "direnv"
brew "fzf"
brew "nnn"

# Standard commands.
brew "moreutils"
brew "ripgrep"
brew "atool"
brew "lzip"
brew "bat"
brew "exa"
brew "fd"

# Python packages.
brew "python"
brew "poetry"
brew "black"
