# ~/.config/afew/config

[SpamFilter]

[ArchiveSentMailsFilter]

[FolderNameFilter]
folder_lowercases = true
folder_transforms = 'personal/inbox':inbox 
                    'personal/archive':archive 
                    'personal/sent':sent
                    'personal/spam':spam 
                    'personal/trash':killed 

[Filter.1]
message = 'already tagged'
query = 'tag:killed OR tag:sent OR tag:spam OR tag:archive OR tag:trash'
tags = -new;-inbox

[InboxFilter]

[MailMover]
folders = personal/inbox
          personal/sent 
          personal/archive 
          personal/trash
          personal/spam

personal/inbox   = 'tag:killed':personal/trash
                   'tag:sent':personal/sent
                   'tag:spam':personal/spam
                   'tag:archive':personal/archive
                   'NOT tag:inbox':personal/archive

personal/sent    = 'tag:killed':personal/trash

personal/archive = 'tag:killed':personal/trash

personal/trash   = 'tag:archive':personal/archive

personal/spam    = 'tag:archive':personal/archive
                   'tag:killed':personal/trash    
