runtime ftplugin/man.vim
" }}}

" Plugins {{{
call plug#begin('~/.cache/vim/plug.vim')
	" Keybindings
	Plug 'tpope/vim-rsi'
	Plug 'tpope/vim-commentary'
	Plug 'machakann/vim-sandwich'
	Plug 'wellle/targets.vim'
	Plug 'rhysd/clever-f.vim'
