# Package config {{{
  g:ale_floating_preview = 1
  g:ale_floating_window_border = ['│', '─', '┌', '┐', '┘', '└', '│', '─']
  g:ale_virtualtext_cursor = 0

  g:pandoc#syntax#conceal#blacklist = [
    'subscript',
    'superscript',
    'atx',
    'codeblock_start',
    'codeblock_delim',
    'list',
    'quotes',
    'inlinecode',
  ]

  g:FoldText_info = 0

  g:netrw_banner = 0

  g:UltiSnipsExpandTrigger = "<tab>"
  g:UltiSnipsJumpForwardTrigger = "<tab>"
  g:UltiSnipsJumpBackwardTrigger = "<S-tab>"

  g:vimtex_imaps_leader = ";"
  g:vimtex_mappings_prefix = "<localleader>"
  g:vimtex_quickfix_enabled = 0
  g:vimtex_view_method = 'skim'

  g:wiki_root = '/Users/jabirali/Notes'
  g:wiki_zotero_root = '/Users/jabirali/Zotero'
  g:wiki_filetypes = ['md']
  g:wiki_link_extension = '.md'
  g:wiki_link_creation = {
    'md': {
      'link_type': 'wiki',
      'url_extension': '',
    }
  }
  g:wiki_mappings_local_journal = {
    '<plug>(wiki-journal-prev)': '[f',
    '<plug>(wiki-journal-next)': ']f',
  }
  g:wiki_journal = {
    'root': '',
    'name': 'journal',
    'frequency': 'daily',
    'date_format': {
      'daily': '%Y-%m-%d',
      'weekly': '%Y-W%W',
    },
  }

  def g:WikiAssetPaste()
    var date = strftime("%Y-%m-%d %H:%M:%S")
    var path = g:wiki_root .. "/assets/" .. date .. ".png"
    var link = '![' .. date .. '](' .. path .. ')'

    system('pngpaste ' .. shellescape(path))
    if v:shell_error == 0
      append(line('.'), link)
    else
      echo "Failed to paste image!"
    endif
  enddef
  nnoremap <space>p <cmd>call WikiAssetPaste()<cr>
# }}}

