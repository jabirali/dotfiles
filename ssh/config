# ~/.ssh/config

Host *
  Protocol 2
  ForwardX11 no
  CheckHostIP no
  Compression no
  UseKeychain yes
  AddKeysToAgent yes

Host home
  Hostname babapi.local
  IdentityFile ~/.ssh/id_ed25519
  User ubuntu

Host ntnu
  Hostname login.stud.ntnu.no
  IdentityFile ~/.ssh/id_ed25519
  User jabirali

Host pvv
  Hostname monty.pvv.org
  IdentityFile ~/.ssh/id_ed25519
  User jabirali

Host sintef
  Hostname vsl142.energy.sintef.no
  ProxyJump stepstone
  IdentityFile ~/.ssh/id_rsa
  User jabiro

Host stepstone
  Hostname stepstone.sintef.no
  IdentityFile ~/.ssh/id_rsa
  User jabiro
