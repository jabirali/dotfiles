[
    // Vim-compatible keybindings for navigating splits.
    {
        "key": "alt+enter",
        "command": "workbench.action.togglePanel"
    },
    {
        "key": "alt+h",
        "command": "workbench.action.navigateLeft",
    },
    {
        "key": "alt+j",
        "command": "workbench.action.navigateDown",
    },
    {
        "key": "alt+k",
        "command": "workbench.action.navigateUp",
    },
    {
        "key": "alt+l",
        "command": "workbench.action.navigateRight",
    },
    // Vim-compatible keybindings for autocompletion.
    {
        "key": "ctrl+k",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "ctrl+j",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    // Vim-compatible keybindings for menu selection.
    {
        "key": "ctrl+k",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "!editorFocus"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "!editorFocus"
    },
    // Browser-compatible keybindings for history navigation.
    {
        "key": "alt+right",
        "command": "workbench.action.navigateForward"
    },
    {
        "key": "alt+left",
        "command": "workbench.action.navigateBack"
    },
    // Simpler keybinding for "close sidebar".
    {
      "key": "escape",
      "command": "workbench.action.toggleSidebarVisibility",
      "when": "sideBarVisible"
    },
    // Simpler keybinding for "jump in file".
    {
        "key": "ctrl+j",
        "command": "workbench.action.gotoSymbol",
        "when": "editorFocus"
    },
]
