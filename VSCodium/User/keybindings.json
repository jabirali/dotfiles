[
    // Tilish-compatible keybindings for navigating splits.
    {
        "key": "cmd+enter",
        "command": "workbench.action.togglePanel"
    },
    {
        "key": "cmd+h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "cmd+j",
        "command": "workbench.action.navigateDown"
    },
    {
        "key": "cmd+k",
        "command": "workbench.action.navigateUp"
    },
    {
        "key": "cmd+l",
        "command": "workbench.action.navigateRight"
    },
    {
        "key": "shift+cmd+h",
        "command": "workbench.action.moveEditorToLeftGroup"
    },
    {
        "key": "shift+cmd+j",
        "command": "workbench.action.moveEditorToBelowGroup"
    },
    {
        "key": "shift+cmd+k",
        "command": "workbench.action.moveEditorToAboveGroup"
    },
    {
        "key": "shift+cmd+l",
        "command": "workbench.action.moveEditorToRightGroup"
    },
    // Tilish-compatible keybindings for navigating tabs.
    {
        "key": "alt+[",
        "command": "workbench.action.previousEditor",
        "when": "editorFocus",
    },
    {
        "key": "alt+]",
        "command": "workbench.action.nextEditor",
        "when": "editorFocus",
    },
    {
        "key": "shift+alt+[",
        "command": "workbench.action.moveEditorLeftInGroup",
        "when": "editorFocus",
    },
    {
        "key": "shift+alt+]",
        "command": "workbench.action.moveEditorRightInGroup",
        "when": "editorFocus",
    },
    {
        "key": "alt+]",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus",
    },
    {
        "key": "alt+[",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus",
    },
    // Vim-compatible keybindings for autocompletion.
    {
        "key": "ctrl+p",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "ctrl+n",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    // Vim-compatible keybindings for menu selection.
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "!editorFocus"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "!editorFocus"
    },
    // Vim-compatible keybindings for search selection.
    {
        "key": "ctrl+n",
        "command": "search.action.focusNextSearchResult",
        "when": "hasSearchResult || inSearchEditor"
    },
    {
        "key": "ctrl+p",
        "command": "search.action.focusPreviousSearchResult",
        "when": "hasSearchResult || inSearchEditor"
    },
    // Browser-compatible keybindings for history navigation.
    {
        "key": "cmd+right",
        "command": "workbench.action.navigateForward"
    },
    {
        "key": "cmd+left",
        "command": "workbench.action.navigateBack"
    },
    // Simpler keybinding for "close sidebar".
    {
      "key": "escape",
      "command": "workbench.action.toggleSidebarVisibility",
      "when": "sideBarVisible"
    },
]
