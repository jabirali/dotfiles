general {
    interval       = 5
    colors         = true
    color_good     = "#2AA198"
    color_bad      = "#586E75"
    color_degraded = "#DC322F"
}

order += "wireless _first_"
order += "ethernet _first_"
order += "memory"
order += "cpu_usage"
order += "volume master"
order += "battery all"
order += "time"

wireless _first_ {
    format_up = " wifi: %essid "
    format_down = " wifi: none "
    separator = false
}

ethernet _first_ {
    format_up = " lan: %ip "
    format_down = " lan: none "
    separator = false
}

memory {
    format = " ram: %free "
    threshold_degraded = "1G"
    separator = false
}

cpu_usage {
    format = " cpu: %usage "
    separator = false
}

battery all {
    format = " bat: %percentage%status "
    format_down = ""
    integer_battery_capacity = true
    status_chr  = "+"
    status_bat  = ""
    status_full = "!"
    status_unk  = ""
    threshold_type = percentage
    low_threshold = 10
    separator = false
}

volume master {
    format = " vol: %volume "
    format_muted = " vol: %volume "
    device = "pulse"
    separator = false
}

time {
    format = " %Y-%m-%d %H:%M "
    separator = false
}
