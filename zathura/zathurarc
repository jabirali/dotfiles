# ~/.config/zathura/zathurarc 

# Base16/Solarized colorscheme
set default-bg                  "#fdf6e3"
set default-fg                  "#eee8d5"

set statusbar-fg                "#657b83"
set statusbar-bg                "#fdf6e3"

set inputbar-bg                 "#fdf6e3"
set inputbar-fg                 "#002b36"

set notification-bg             "#fdf6e3"
set notification-fg             "#002b36"

set notification-error-bg       "#fdf6e3"
set notification-error-fg       "#dc322f"

set notification-warning-bg     "#fdf6e3"
set notification-warning-fg     "#dc322f"

set highlight-color             "#b58900"
set highlight-active-color      "#268bd2"

set completion-bg               "#eee8d5"
set completion-fg               "#268bd2"

set completion-highlight-fg     "#002b36"
set completion-highlight-bg     "#268bd2"

set recolor-lightcolor          "#fdf6e3"
set recolor-darkcolor           "#073642"

set recolor                     "true"

# Keybindings
map z recolor

# NeoVim/Synctex
set synctex true
set synctex-editor-command "nvr --remote-silent %f -c %l"

# Misc
set window-title-basename true
set guioptions ""
