# Better UNIX IDE.
vi    vim
vi    nvim
cat   bat -p
less  bat -p
find  fd
grep  rg
tree  exa -T
ls    exa

# Shorter commands.
a   sudo apt
ai  sudo apt install
ar  sudo apt autoremove --purge
au  sudo apt update && sudo apt upgrade
as  apt search

b   brew
bb  brew sync
be  open -t ~/.config/brewfile/Brewfile
bi  brew install
br  brew remove
bu  brew upgrade
bs  brew search

c   cd ~/.config

g   git
ga  git add
gb  git branch
gc  git commit
gd  git diff
gf  git fetch
gm  git merge
gp  git push
gs  git status
gr  git reset

p   projector

resilio  open https://localhost:8888; ssh babapi -L 8888:babapi.local:8888 -N

l   ls
l   exa

o   open
o   xdg-open

O   qlmanage -p

subl  open -a "Sublime Text 4"

v   vi
v   vim
v   nvim
v   mvim

z   zotfile
